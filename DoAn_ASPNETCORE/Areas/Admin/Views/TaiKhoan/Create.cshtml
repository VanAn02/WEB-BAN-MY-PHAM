                    </div>

                    <div class="key">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="text" name="HoTen" asp-for="Password" placeholder="Mật Khẩu">
                        <div class="clearfix"></div>
                    </div

                    <div class="key">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="text" name="DiaChi" asp-for="IsAdmin" placeholder="IsAdmin">
                        <div class="clearfix"></div>
                    </div>

                    

                    <input type="submit" value="Submit">
                </form>
            </div>

        </div>
    </div>
    <!--login-->
</div>
<!--content-->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}